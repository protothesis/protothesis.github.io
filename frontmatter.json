{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "previewPath": "blog",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime"
        },
        {
          "title": "heroImage",
          "name": "heroImage",
          "type": "image"
        }
      ]
    },
    {
      "name": "page",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime"
        },
        {
          "title": "heroImage",
          "name": "heroImage",
          "type": "image"
        }
      ]
    },
    {
      "name": "projects",
      "previewPath": "'projects'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": []
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "blog"
      ]
    },
    {
      "title": "page",
      "path": "[[workspace]]/src/content/pages",
      "contentTypes": [
        "page"
      ]
    },
    {
      "title": "project",
      "path": "[[workspace]]/src/content/projects",
      "contentTypes": [
        "project"
      ]
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  }
}