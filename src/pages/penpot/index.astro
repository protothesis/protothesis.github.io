---
import SiteLayout from "../../layouts/penpot/SiteLayout.astro";
import ProjectContent from "../../components/ProjectContent.astro";
import { getProjectsNavigation, getAllProjects } from "../../utils/projects";

const projects = await getProjectsNavigation();
const allProjects = await getAllProjects();

// Get the first project dynamically, or you could make this configurable
const currentProject = allProjects[0];
---

<SiteLayout
  title="Site Layout Title - Casey Hunt"
  description="penpot generated site index"
  showNav={true}
  projects={projects}
>
  <ProjectContent projectId={currentProject.id} />
</SiteLayout>
